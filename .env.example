# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-SUPABASE-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_key

# Stripe Price IDs (get from Stripe Dashboard)
# Monthly prices
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_xxx
# Annual prices (40% discount)
STRIPE_PRO_ANNUAL_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_ANNUAL_PRICE_ID=price_xxx
# Featured Location Add-on (per-location pricing)
STRIPE_FEATURED_MONTHLY_PRICE_ID=price_xxx
STRIPE_FEATURED_ANNUAL_PRICE_ID=price_xxx

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Resend Email (optional - emails logged if not set)
RESEND_API_KEY=re_your_resend_api_key

# Email sending uses behaviorwork.com as unified domain with brand-specific sender names:
# - "Find ABA Therapy <noreply@behaviorwork.com>"
# - "Find ABA Jobs <noreply@behaviorwork.com>"
# Only set EMAIL_FROM to override the default behaviorwork.com domain
# EMAIL_FROM=noreply@behaviorwork.com

# Optional: Per-brand email overrides (requires verifying each domain in Resend)
# EMAIL_FROM_THERAPY=noreply@findabatherapy.org
# EMAIL_FROM_JOBS=noreply@findabajobs.org
# EMAIL_FROM_PARENT=noreply@behaviorwork.com
